<%= form_with(model: page, local: true) do |form| %>
  <% if page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% page.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" data-controller="foo">
    <%= form.label :name %>
    <%= form.text_field :name, id: :page_name, data: { target: "foo.name" } %>
    <%= link_to 'foo', "", remote: true, data: { action: "foo#greet" } %>
  </div>

  <div class="field">
    <%= form.label :page %>
    <%= form.number_field :page, id: :page_page %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
